{% extends 'base.html.twig' %}

{% block title %}Hello CatalogController!{% endblock %}

{% block body %}

<h1>{{ product.name }}</h1>

<table class="table table-bordered">
<tr><th>Item Number</th><td>{{ product.itemNumber }}</td></tr>
<tr><th>Name</th><td>{{ product.name }}</td></tr>
<tr><th>Description</th><td>{{ product.description }}</td></tr>
<tr><th>Type</th><td>{{ product.type.name }}</td></tr>
<tr><th>Manufacturer</th><td>{{ product.manufacturer.name }}</td></tr>
<tr><th>Wholesale Price</th><td>{{ (product.price / 100)|format_currency('USD') }}</td></tr>
</table>

<a href="{{ path('app_catalog', options) }}">Back</a>

{% endblock %}