{% extends 'base.html.twig' %}

{% block title %}Hello CatalogController!{% endblock %}

{% block body %}

<h1>{{ product.name }}</h1>


    
    

<div class="row">

    <div class="col-8">

        <table class="table table-bordered">
        <tr><th>Item Number</th><td>{{ product.itemNumber }}</td></tr>
        <tr><th>Name</th><td>{{ product.name }}</td></tr>
        <tr><th>Description</th><td>{{ product.description }}</td></tr>
        <tr><th>Type</th><td>{{ product.type.name }}</td></tr>
        <tr><th>Manufacturer</th><td>{{ product.manufacturer.name }}</td></tr>
        <tr><th>Wholesale Price</th><td>{{ (product.price / 100)|format_currency('USD') }}</td></tr>
        </table>

    <a href="{{ path('app_catalog', options) }}">Back</a>

    </div>

    <div class="col-4">    

        {% for image in product.images %}
        <div class="card">
            <div class="card-body text-center">
                <a href="#" data-bs-toggle="modal" data-bs-target="#exampleModal" onclick="document.getElementById('modalImage').setAttribute('src', '{{ vich_uploader_asset(image) }}');">
                    <img src="{{ vich_uploader_asset(image) }}" class="img-fluid" style="max-height: 200px;" alt="{{ image.image.name }}">
                </a>
            </div>
        </div>
        <br>
        {% endfor %}

    </div>

</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body text-center">
        <img id="modalImage" class="img-fluid" src="#">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

{% endblock %}